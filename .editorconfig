# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 3
insert_final_newline = true
trim_trailing_whitespace = true
# Adding new configs.
print_width = 120
arrow_parens = always
semi = true
trailingComma = none
singleQuote = true


[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
